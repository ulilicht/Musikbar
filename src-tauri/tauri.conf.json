{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Musikbar",
  "version": "2.0.2",
  "identifier": "com.ulilicht.musikbar",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run start:react",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Musikbar",
        "width": 400,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app"
    ],
    "icon": [
      "icons/icon.icns"
    ],
    "resources": [
      "icons/icon-template.png"
    ]
  }
}